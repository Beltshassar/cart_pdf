{
    "name": "extcode/cart-pdf",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3 - PDF Renderer for Invoices and Delivery Notes",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0+"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "PDF",
        "cart"
    ],
    "support": {
        "issues": "https://github.com/extcode/cart_pdf/issues"
    },
    "require": {
        "php": ">=5.6.0",
        "typo3/cms": "^7.6 || ^8.7",
        "extcode/cart": "^4.0",
        "extcode/tcpdf": "^0.4"
    },
    "require-dev": {
        "nimut/testing-framework": "^1.0",
        "phpunit/phpunit": "~4.8.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\CartPdf\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\CartPdf\\Tests\\": "Tests"
        }
    },
    "replace": {
        "cart_pdf": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart_pdf ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart_pdf"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}